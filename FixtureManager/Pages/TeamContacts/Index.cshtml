@page
@model FixtureManager.Pages.TeamContacts.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Team Contacts</h2>

<p>
    @if (User.Identity.IsAuthenticated)
    {
        <a asp-page="Create">Create New</a>
    }
</p>

<table class="table table-condensed">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TeamContact[0].Team)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamContact[0].Person)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamContact[0].ContactType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TeamContact) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Team.DisplayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Person.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactType)
            </td>
        @if (User.Identity.IsAuthenticated)
        {
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a> |               
                <a asp-page="./Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
            </td>
        }
        </tr>
}
    </tbody>
</table>
