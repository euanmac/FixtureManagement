@page
@model FixtureManager.Pages.TeamContacts.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TeamContact</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TeamContact.Team" class="control-label"></label>
                <select asp-for="TeamContact.TeamId" class="form-control" asp-items="ViewBag.TeamId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TeamContact.Person" class="control-label"></label>
                <select asp-for="TeamContact.PersonId" class="form-control" asp-items="ViewBag.PersonId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TeamContact.ContactType" class="control-label"></label>
                <select asp-for="TeamContact.ContactType" class="form-control" asp-items="Html.GetEnumSelectList<FixtureManager.Models.ContactType>()"></select>
                <span asp-validation-for="TeamContact.ContactType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
