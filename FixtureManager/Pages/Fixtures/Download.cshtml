@page
@model FixtureManager.Pages.Fixtures.DownloadModel
@{
    ViewData["Title"] = "Download Fixtures";
}

<h2>Download Fixtures</h2>

<form method="post">
    @*<p>
            <a asp-page="Create">Create New</a>
        </p>*@
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
    <table class="table table-condensed">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DownloadFixtures[0].Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DownloadFixtures[0].IsHome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DownloadFixtures[0].Opponent)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DownloadFixtures[0].FixtureType)
                </th>
                <th>Select</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var fixture in Model.DownloadFixtures)
            {
                //FixtureManager.Models.Fixture fixture = item;
                <tr>
                    <td>
                        <input type="hidden" name="DownloadFixtures.Index" value="@fixture.Id" />
                        <input type="hidden" name="DownloadFixtures[@fixture.Id].Id" value="@fixture.Id" />
                        <input type="hidden" name="DownloadFixtures[@fixture.Id].Date" value="@fixture.Date" />
                        @Html.DisplayFor(modelItem => fixture.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => fixture.IsHome)
                        <input type="hidden" name="DownloadFixtures[@fixture.Id].IsHome" value="@fixture.IsHome.ToString()"/>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => fixture.Opponent)
                        <input type="hidden" name="DownloadFixtures[@fixture.Id].Opponent" value="@fixture.Opponent"/>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => fixture.FixtureType)
                        <input type="hidden" name="DownloadFixtures[@fixture.Id].FixtureType" value="@fixture.FixtureType" />
                    </td>
                    <td>
                        <!--<a asp-page="./Edit" asp-route-id="@fixture.Id">Edit</a> |-->
                        @*<a asp-page="./Details" asp-route-id="@item.Id">Details</a>*@
                        <!--<a asp-page="./Delete" asp-route-id="@fixture.Id">Delete</a>-->
                        <input name="DownloadFixtures[@fixture.Id].Add" value="true" checked type ="checkbox"/>

                    </td>

                </tr>
            }
        </tbody>
    </table>
</form>
